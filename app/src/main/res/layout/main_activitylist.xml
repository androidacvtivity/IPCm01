<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_cod"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:gravity="right|bottom"
            android:paddingRight="5dp"
            android:text="@string/main_default_product_code"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/image_product_status"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="@string/dialog_info"
                android:src="@drawable/ic_error" />

            <TextView
                android:id="@+id/text_comment_additional"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:gravity="center_vertical|right"
                android:paddingRight="7dp"
                android:text="@string/main_comment_status3_count"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_comment"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/main_comment_status1"
                android:textSize="12sp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="10"
            android:paddingLeft="2dp"
            android:text="@string/main_default_product_name"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/text_mu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:paddingLeft="2dp"
                android:text="@string/main_default_mu_name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:lines="1"
                android:paddingRight="2dp"
                android:text="@string/main_default_mod_date"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/text_price_c1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:text="@string/main_default_product_price"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_price_c2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:text="@string/main_default_product_price"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_price_c3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:text="@string/main_default_product_price"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/text_price_p1"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:text="@string/main_default_product_price"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/text_price_p2"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:text="@string/main_default_product_price"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/text_price_p3"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:text="@string/main_default_product_price"
                android:textSize="18sp"
                android:textStyle="italic" />

        </TableRow>
        
    </TableLayout>

</LinearLayout>